  <div class="row" style="margin-top: 150px!important;">
    <h2 style="color:rgb(167, 167, 167);">My Cart</h2>

    <div>
      <table class="table">
        <thead style="font-size:25px;">
          <tr>
            <th scope="col">Bidding cart</th>
            <th scope="col">Information product</th>
            <th scope="col">Bid Price</th>
            <th scope="col">Status</th>
            <th scope="col">Buy Price</th>
            <th scope="col">Choice</th>
          </tr>
        </thead>
        {{#each cart}}
        <tbody>
          <tr>
            <th scope="row"><a href="/products/detailproduct/id?id={{this.idsanpham}}"><img src="{{this.image}}" alt=""
                  style="width:50px; height:50px;"></a></th>
            <td style="width:450px;">{{this.tensp}}<br>
              <p style="color: blue;">Supplier:<span>{{this.seller}}</span></p>
            </td>
            <td>{{this.giadau}} đ</td>
            <td>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                Delete
              </button>

              <!-- Modal -->
              {{>modaldeletecart}}
            </td>

            <td>{{this.giaphaitra}} đ</td>

            <td>
              <input type="checkbox" name="" id="" class="col text-center">
            </td>
          </tr>
        </tbody>
        {{/each}}
      </table>

    </div>
  </div>

