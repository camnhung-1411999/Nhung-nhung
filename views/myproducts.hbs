<!-- Custom styles for this template -->
<link href="/stylesheets/agency.css" rel="stylesheet">
<link rel="stylesheet" href="/../stylesheets/mycart.css">
{{/section}}
<div id="page-top">
    {{>navProducts}}


    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                {{>profile}}
            </div>
            <div class="col-md-9">
                <div class="row" style="margin-top: 150px!important;">

                    <div class="col-md-9">
                        <h2 style="color:rgb(167, 167, 167);">My Product</h2>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deletecart">
                            Delete your cart
                        </button>
                        {{>modaldeletecart}}
                    </div>
                    <!-- Modal -->
                </div>
                <div>
                    <table class="table">
                        <thead style="font-size:25px;">
                            <tr>
                                <th scope="col">Bidding cart</th>
                                <th scope="col">Information</th>
                                <th scope="col">Bid Price</th>
                                <th scope="col">Status</th>
                                <th scope="col">Edit</th>
                            </tr>
                        </thead>
                        {{#each list}}
                        <tbody>
                            <tr>
                                <th scope="row"><a href="/products/detailproduct/{{this._id}}"><img src="{{this.image}}"
                                            alt="" style="width:50px; height:50px;"></a></th>
                                <td style="width:200px;">{{this.ten}}
                                </td>
                                <td>{{this.giahientai}} Ä‘</td>
                                {{#if this.selling}}
                                <td>Bidding</td>
                                {{else}}
                                <td>End Bid</td>
                                {{/if}}
                                <td><a href="/products/{{this._id}}/edit">
                                        <i class="fas fa-edit" style="color: green;"></i>
                                    </a></td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>

                </div>
            </div>
        </div>

    </div>

</div>



