<div id="page-top">
  {{>navProducts}}

  <div class="container-fluid mt-12">
    <div class="row">
      <div class="col-sm-3">
        {{>category}}
      </div>
      <div class="col-sm-9">

        <section class="bg-light page-section" id="topbid">

          <div class="row" style="padding-left: 15px; padding-right: 15px;">

            {{#each list}}
            {{#if this.selling}}

            <div class="col-md-2 col-sm-6 topbid-item {{this.loai}}">
              <a class="topbid-link" href="/products/detailproduct/id?id={{this._id}}">
                <div class="topbid-hover">
                  <div class="topbid-hover-content">
                    <i class="fas fa-plus fa-3x"></i>
                  </div>
                </div>
                <img class="img-fluid" src="{{this.image}}" alt="">
              </a>
              <div class="topbid-caption">
                <h5>{{this.ten}}</h5>
                <p class="text-muted">{{this.giahientai}} â‚«</p>
                <p class="settime" style="color:red"></p>
                <p class="temp" hidden>{{this.datetimeproduct}}</p>
              </div>
            </div>
            {{/if}}
            {{/each}}

          </div>
        </section>

        <div class="d-flex justify-content-center">
          {{!-- <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
